<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Back to Sign In?"/>

        <TextView
            android:id="@+id/aadhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aadhar No."
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aadhar"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvaccountInfo"
            android:id="@+id/aadhar_id"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/aadhar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Aadhar here"
                android:inputType="numberDecimal" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvaccountInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Information"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/aadhar_id"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_below="@+id/tvaccountInfo"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvaccountInfo"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/username1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Email"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="30dp"
            android:layout_below="@id/username"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvaccountInfo"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname  Name  Father Name"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calendar"
            android:layout_below="@+id/name1"
            android:text="Date Of Birth : "
            android:layout_alignLeft="@+id/tvaccountInfo"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/calendar"
            android:layout_below="@+id/name1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:text="DD/MM/YYYY"/>

        <TextView
            android:id="@+id/tvGender"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendar"
            android:text="Gender"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvGender"
            android:layout_below="@+id/calendar"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp">

            <RadioButton
                android:id="@+id/genderM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:layout_marginLeft="30dp"/>

            <RadioButton
                android:id="@+id/genderF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:layout_marginLeft="30dp"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvaccountInfo"
            android:layout_below="@+id/gender"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <EditText
                android:id="@+id/mobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile No."
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout>



        <TextView
            android:id="@+id/tvcaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Address"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textStyle="bold"
            android:layout_below="@+id/mobile"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cflat"
            android:layout_below="@+id/tvcaddress"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/cflat1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="Flat no., Building name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clocality"
            android:layout_below="@+id/cflat"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/clocality1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPostalAddress"
                android:gravity="top"
                android:hint="Locality, area or street" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city1"
            android:layout_below="@+id/clocality"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/city3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="City" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cpincode"
            android:layout_below="@+id/city1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/cpincode1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:hint="Pincode" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/cstate"
            android:layout_below="@+id/city1"
            android:layout_toRightOf="@+id/cpincode"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp" >

            <EditText
                android:id="@+id/cstate1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="State" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cdistrict"
            android:layout_below="@+id/cpincode"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/cdistrict1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="District" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvpaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permanent Address"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/cdistrict"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pflat"
            android:layout_below="@+id/tvpaddress"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/pflat1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="Flat no., Building name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/plocality"
            android:layout_below="@+id/pflat"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/plocality1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textPostalAddress"
                android:gravity="top"
                android:hint="Locality, area or street" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/city2"
            android:layout_below="@+id/plocality"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/city4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="City" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/ppincode"
            android:layout_below="@+id/city2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/ppincode1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:gravity="top"
                android:hint="Pincode" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/pstate"
            android:layout_below="@+id/city2"
            android:layout_toRightOf="@+id/ppincode"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp" >

            <EditText
                android:id="@+id/pstate1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="State" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pdistrict"
            android:layout_below="@+id/ppincode"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/pdistrict1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="District" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relative"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/pdistrict"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rname"
            android:layout_below="@+id/relative"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/rname1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="Name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/torelation"
            android:layout_below="@+id/rname"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_alignLeft="@+id/tvcaddress">

            <EditText
                android:id="@+id/torelation1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="text"
                android:gravity="top"
                android:hint="Type Of Relation" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tvphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:text="Your Photograph"
            android:textSize="22sp"
            android:layout_below="@+id/torelation"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/rounded_button"
            android:id="@+id/btnchoose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"

            android:layout_below="@+id/tvphoto"
            android:text="Choose Photograph"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnchoose"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/photo"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:text="Submit"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/photo"
            android:text="Reset"/>

    </RelativeLayout>

</ScrollView>